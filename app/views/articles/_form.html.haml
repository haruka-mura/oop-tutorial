= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :category1
    = f.select :category1, Category.all.map { |t| [t.name, t.id]  }
  .field
    = f.label :category2
    = f.select :category2, Category.all.map { |t| [t.name, t.id]  }
  .actions
    = f.submit 'Save'
